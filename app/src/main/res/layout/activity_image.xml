<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ImageActivity">

    <ImageView
        android:id="@+id/activity_image_imageView"
        android:layout_width="799dp"
        android:layout_height="465dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="The iamge returned for the camera intent."
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_image_txt_save"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/activity_image_txt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/allerta"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/image_txt_save" />

    <Button
        android:id="@+id/activity_image_btn_delete"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/buttonBackground"
        android:text="@string/image_btn_delete"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/activity_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/activity_image_imageView" />

    <Button
        android:id="@+id/activity_image_btn_save"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@color/buttonBackground"
        android:text="@string/image_btn_save"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/activity_image_imageView" />
</android.support.constraint.ConstraintLayout>